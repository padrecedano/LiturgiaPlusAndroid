    </style>

    <style name="ThemeOverlay.App.Switch" parent="">
        <item name="colorPrimary">@color/colorPrimarySwitch</item>
        <item name="colorOnPrimary">@color/colorOnPrimarySwitch</item>
        <item name="colorSurfaceVariant">@color/colorSurfaceVariantSwitch</item>
    </style>

    <style name="BugReport" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#00FF00</item>
        <item name="android:background">@color/colorBackgroundBugReport</item>

    </style>



    <dimen name="body_line_height">45sp</dimen>
    <dimen name="default_font_recycler">45px</dimen>
