<resources>
    <!-- Base application theme. -->
    <style name="Theme.LiturgiaPlusNew" parent="Theme.Material3.DayNight">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="customTextViewBackAttributeColor">@color/black</item>
        <item name="android:textViewStyle">@style/Widget.App.TextViewNew</item>
        <item name="materialAlertDialogTheme">@style/ThemeOverlay.App.MaterialAlertDialog</item>
        <!-- FAB -->
        <item name="extendedFloatingActionButtonStyle">
            @style/Widget.App.ExtendedFloatingActionButton
        </item>
        <item name="floatingActionButtonStyle">@style/Widget.App.FloatingActionButton</item>
<!-- Switch -->
        <item name="materialSwitchStyle">@style/Widget.App.Switch</item>

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/raisin_black</item>
      <!--  <item name="colorPrimaryVariant">@color/colorBreviario</item> -->
        <item name="colorPrimaryVariant">@color/black_coral</item>

        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/amber_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/colorPrimaryVariant</item>
        <item name="android:navigationBarColor">@color/colorPrimaryVariant</item>

        <item name="actionModeCloseDrawable">@drawable/ic_baseline_close_24</item>
        <item name="windowActionModeOverlay">true</item>

        <!-- Customize your theme here. -->
    </style>
</resources>